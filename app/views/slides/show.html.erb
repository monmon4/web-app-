
<p>
  <strong>Title:</strong>
  <%= @slide.title %>
</p>

<p><%= image_tag("/assets/#{@slide.title}")%></p>

<p>
  <strong>Likes:</strong>
  <%= @slide.likes %>
</p>

<div class="like">
	<div>
		<%= button_tag "Foo" %>
	</div>
	
</div>


<div id="notes">
	<%= render @pdf_file.notes %>
</div>
<div>
	<%= form_for ([@pdf_file, @pdf_file.notes.new]) do |f| %>
	<div class="field">
		<%= f.label :note %>
		<%= f.text_area :note, size: "25x5" %>
	</div>
	<div class="actions">
		<%= f.submit "add new comment" %>
	</div>
	<% end %>
</div>
